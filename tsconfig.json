{
	"compilerOptions": {
	  "target": "esnext",
	  "module": "commonjs",
	  "moduleResolution": "node",
		"outDir": "lib",
	  "strict": true,
		"declaration": true,
	  "importHelpers": true,
	  "experimentalDecorators": true,
	  "esModuleInterop": true,
	  "allowSyntheticDefaultImports": true,
	  "sourceMap": true,
	  "baseUrl": ".",
	  "types": [
      "mocha",
      "chai"
	  ],
	  "paths": {
      "@/*": [
        "src/*"
      ]
	  },
	  "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "scripthost"
	  ]
	},
	"files": [
		"src/index.ts"
	],
	"include": [
	  "src/**/*.ts"
	],
	"exclude": [
	  "node_modules",
		"tests/**/*.ts"
	]
}
